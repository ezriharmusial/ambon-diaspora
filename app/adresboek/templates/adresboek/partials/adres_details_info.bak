        <!-- Adres Details -->
        <section id="address" class="section">
          <div class="media">
            <div class="media-content">
              <h2 class="title is-size-4">
                {{ adres.bewoners }}
              </h2>
              <div class="subtitle is-size-5">
              {% if adres.compleet %}
              <p>{{ adres.postcode.straatnaam }} {{ adres.huisnummer }} {{ adres.toevoeging }}</p>
              <p>{{ adres.postcode.postcode }}, {{ adres.postcode.plaatsnaam }}</p>
              <p>
              {% elif adres.vernomen_adres %}
              {{ adres.vernomen_adres}}<br />(Adres onvolledig)
              {% else %}
              (Adres onbekend)
              {% endif %}
              </p>
              </div>
            </div>
          </div>
        </section>
